  //setInterval(draw, 100);

  function draw() {
    ctx.clearRect(0,0,580,580);
    ctx.drawImage(img,-290,-290,575,575);
    ctx.rotate(0.005);
  }


  $('#canvas').mousemove( function(event) { draw(); } );

